# ═══════════════════════════════════════
# APPLICATION CONFIGURATION
# ═══════════════════════════════════════
APP_NAME=ShopKart
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://yourstore.com
FRONTEND_URL=https://yourstore.com

# ═══════════════════════════════════════
# LOGGING
# ═══════════════════════════════════════
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=warning

# ═══════════════════════════════════════
# DATABASE CONFIGURATION
# ═══════════════════════════════════════
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=shopkart_prod
DB_USERNAME=shopkart_user
DB_PASSWORD=

# ═══════════════════════════════════════
# REDIS CONFIGURATION
# ═══════════════════════════════════════
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=
REDIS_PORT=6379

# ═══════════════════════════════════════
# CACHE, SESSION & QUEUE
# ═══════════════════════════════════════
BROADCAST_DRIVER=log
CACHE_DRIVER=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120
QUEUE_CONNECTION=redis
FILESYSTEM_DISK=local

# ═══════════════════════════════════════
# MAIL CONFIGURATION
# ═══════════════════════════════════════
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailgun.org
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@yourstore.com
MAIL_FROM_NAME="${APP_NAME}"

# ═══════════════════════════════════════
# PAYMENT GATEWAYS
# ═══════════════════════════════════════
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=
RAZORPAY_CURRENCY=INR

STRIPE_KEY=
STRIPE_SECRET=
STRIPE_WEBHOOK_SECRET=

# ═══════════════════════════════════════
# SHIPPING (SHIPROCKET)
# ═══════════════════════════════════════
SHIPROCKET_EMAIL=
SHIPROCKET_PASSWORD=
# SHIPROCKET_BASE_URL=https://apiv2.shiprocket.in/v1/external

# ═══════════════════════════════════════
# AWS S3 (FOR FILE STORAGE)
# ═══════════════════════════════════════
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=

# ═══════════════════════════════════════
# MONITORING & ERROR TRACKING
# ═══════════════════════════════════════
SENTRY_LARAVEL_DSN=

# ═══════════════════════════════════════
# SECURITY & AUTH
# ═══════════════════════════════════════
JWT_SECRET=
JWT_TTL=60
JWT_REFRESH_TTL=20160

# ═══════════════════════════════════════
# PRICING & LIMITS
# ═══════════════════════════════════════
DEFAULT_CURRENCY=INR
MIN_ORDER_AMOUNT=100
MAX_ORDER_AMOUNT=10000000
MAX_COD_AMOUNT=5000000

# ═══════════════════════════════════════
# SEEDER CREDENTIALS (Development Only)
# ═══════════════════════════════════════
ADMIN_NAME=Admin
ADMIN_EMAIL=admin@yourstore.com
ADMIN_PASSWORD=
TEST_CUSTOMER_EMAIL=customer@yourstore.com
TEST_CUSTOMER_PASSWORD=

# ═══════════════════════════════════════
# LICENSE CONFIGURATION
# ═══════════════════════════════════════
SHOPKART_LICENSE_PORTAL_URL=https://license.animazon.in/api
SHOPKART_LICENSE_SECRET_KEY=

# ═══════════════════════════════════════
# CSP EXTENSIONS (Optional)
# ═══════════════════════════════════════
# CSP_EXTRA_SCRIPT_SRC=
# CSP_EXTRA_CONNECT_SRC=
# CSP_EXTRA_FRAME_SRC=

# ═══════════════════════════════════════
# FEATURE FLAGS
# ═══════════════════════════════════════
ENABLE_REVIEWS=true
ENABLE_BUNDLES=true
ENABLE_COUPONS=true
